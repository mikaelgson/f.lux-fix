{
  "manifest_version": 2,
  "version": "0.0.1",
  "name": "f.lux-fix",
  "description": "Fixes broken color artifacts on macOS when using full screen html5 video with f.lux enabled",
  "author": "https://github.com/mikaelgson",
  "browser_action": {
    "default_icon": "icon128.png"
  },
  "icons": {
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "css": [
        "video-opacity.css"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ],
  "permissions": [
    "activeTab"
  ]
}
